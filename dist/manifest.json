{
  "name": "YoutubeDownloader",
  "version": "0.1.0",
  "description": "Conveniently download Youtube videos into a variety of formats.",
  "permissions": ["tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "assets/16.png",
      "32": "assets/32.png",
      "48": "assets/48.png",
      "64": "assets/64.png",
      "128": "assets/128.png"
    },
    "default_title": "Youtube Downloader",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
